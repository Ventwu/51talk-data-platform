{
  "name": "51talk-data-platform",
  "version": "1.0.0",
  "description": "51Talk运营数据中台系统",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && npm test",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "db:migrate": "cd database && node migrate.js migrate",
    "db:rollback": "cd database && node migrate.js rollback",
    "db:reset": "cd database && node migrate.js reset",
    "db:status": "cd database && node migrate.js status",
    "setup": "npm run install:all && npm run db:migrate",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "npm run clean:frontend && npm run clean:backend",
    "clean:frontend": "cd frontend && rm -rf node_modules dist",
    "clean:backend": "cd backend && rm -rf node_modules dist",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "51talk",
    "data-platform",
    "dashboard",
    "analytics",
    "react",
    "nodejs",
    "typescript"
  ],
  "author": "51Talk Development Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/51talk/data-platform.git"
  },
  "bugs": {
    "url": "https://github.com/51talk/data-platform/issues"
  },
  "homepage": "https://github.com/51talk/data-platform#readme",
  "workspaces": [
    "frontend",
    "backend"
  ]
}